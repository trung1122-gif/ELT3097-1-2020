<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:src="@drawable/zzzz" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="580dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/imageButton1"
                    android:layout_width="190dp"
                    android:layout_height="190dp"
                    android:layout_marginLeft="8dp"
                    app:srcCompat="@drawable/rsz_tedwork"
                    android:layout_marginStart="8dp" />

                <ImageButton
                    android:id="@+id/imageButton2"
                    android:layout_width="190dp"
                    android:layout_height="190dp"
                    android:layout_marginLeft="10dp"
                    app:srcCompat="@drawable/tenradio"
                    android:layout_marginStart="10dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="122dp"
                    android:layout_height="35dp"
                    android:text="Worklife with Adam Granth"
                    android:textColor="@android:color/background_dark"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="136dp"
                    android:layout_height="37dp"
                    android:text="TED Radio Hour"
                    android:textColor="@android:color/background_dark"
                    android:layout_marginLeft="80dp"
                    android:layout_marginStart="80dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="122dp"
                    android:layout_height="30dp"
                    android:text="May 12, 2020"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="Friday"
                    android:layout_marginLeft="80dp"
                    android:layout_marginStart="80dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/imageButton3"
                    android:layout_width="190dp"
                    android:layout_height="190dp"
                    android:layout_marginLeft="8dp"
                    app:srcCompat="@drawable/tedtalk"
                    android:layout_marginStart="8dp" />

                <ImageButton
                    android:id="@+id/imageButton4"
                    android:layout_width="190dp"
                    android:layout_height="190dp"
                    android:layout_marginLeft="10dp"
                    app:srcCompat="@drawable/ten"
                    android:layout_marginStart="10dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textVie5"
                    android:layout_width="122dp"
                    android:layout_height="25dp"
                    android:text="TED Talk Daily"
                    android:textColor="@android:color/background_dark"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="136dp"
                    android:layout_height="25dp"
                    android:text="TED en Espanol"
                    android:textColor="@android:color/background_dark"
                    android:layout_marginLeft="80dp"
                    android:layout_marginStart="80dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="122dp"
                    android:layout_height="30dp"
                    android:text="21:46"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="Thursday"
                    android:layout_marginLeft="80dp"
                    android:layout_marginStart="80dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/imageButton5"
                    android:layout_width="190dp"
                    android:layout_height="190dp"
                    android:layout_marginLeft="8dp"
                    app:srcCompat="@drawable/teninterview"
                    android:layout_marginStart="8dp" />

                <ImageButton
                    android:id="@+id/imageButton6"
                    android:layout_width="190dp"
                    android:layout_height="190dp"
                    android:layout_marginLeft="10dp"
                    app:srcCompat="@drawable/tedsincerely"
                    android:layout_marginStart="10dp" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <ImageButton

            android:layout_width="100dp"
            android:layout_height="80dp"
            android:src="@drawable/under_1" />

        <ImageButton

            android:layout_width="100dp"
            android:layout_height="80dp"
            android:src="@drawable/under_2" />

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:src="@drawable/under_4" />

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:src="@drawable/under_3" />
    </LinearLayout>

</LinearLayout>