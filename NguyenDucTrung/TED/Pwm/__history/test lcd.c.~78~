#include <16F877A.h>
//#include <def_877a.h>
#device *=16 adc=10
#fuses XT, NOWDT, NOPROTECT, BROWNOUT, PUT, NOLVP 
#use delay(crystal=20000000)

void main(){
  setup_timer_2(T2_DIV_BY_16,255,1);
  setup_ccp2(CCP_PWM);
  set_pwm2_duty(2);
  delay_ms(3000);
    set_pwm2_duty(64);
  delay_ms(3000);
    set_pwm2_duty(128);
  delay_ms(3000);
    set_pwm2_duty(192);
  delay_ms(3000);
    set_pwm2_duty(255);
  delay_ms(3000);
   
   while(true){
    }  
}

