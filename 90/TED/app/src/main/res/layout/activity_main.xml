<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context=".MainActivity">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="#FFFFFF"
    android:gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:hint="@string/podcasts"
        android:textColorHint="#F12535"
        android:textSize="30sp" />
</RelativeLayout>

        <GridView
            android:id="@+id/listPosters"
            android:layout_width="match_parent"
            android:layout_height="590dp"
            android:numColumns="2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal">

        <ImageButton

            android:layout_width="100dp"
            android:layout_height="60dp"
            android:src="@drawable/talk_under" />

        <ImageButton

            android:layout_width="100dp"
            android:layout_height="60dp"
            android:src="@drawable/discover_under" />

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:src="@drawable/podcast_under" />

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:src="@drawable/myted_under" />
    </LinearLayout>
</LinearLayout>