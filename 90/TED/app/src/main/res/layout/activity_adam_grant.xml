<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="25dp">

            <ImageButton
                android:layout_width="150dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/adam_grant1"/>
            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="14dp">
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="21dp"
                    android:text="Adam Grant"/>
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="80dp"
                    android:text="Are you a giver or a taker?"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:gravity="left"
                    />
            </LinearLayout>

            <ImageButton
                android:layout_width="8dp"
                android:layout_height="35dp"
                app:srcCompat="@drawable/ic_option_menu"
                tools:ignore="VectorDrawableCompat"
                android:onClick="showPopupAdamGrant"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="25dp">

                <ImageButton
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    app:srcCompat="@drawable/adam_grant2"/>
                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:orientation="vertical"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="14dp">
                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="21dp"
                        android:text="Adam Grant"/>
                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="80dp"
                        android:text="The surprising habits of original thinkers"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:gravity="left"
                        />

                </LinearLayout>

                <ImageButton
                    android:layout_width="8dp"
                    android:layout_height="35dp"
                    app:srcCompat="@drawable/ic_option_menu"
                    android:onClick="showPopupAdamGrant"
                    tools:ignore="VectorDrawableCompat" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>